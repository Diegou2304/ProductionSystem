@model ProductionSystem.Web.Models.PagoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <select asp-for="EmpresaId" asp-items="Model.Empresas" class="form-control"></select>
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoTotal" class="control-label"></label>
                <input asp-for="MontoTotal" class="form-control" />
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input type="date" min="2020-01-01" asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>


            <h4>Detalle de Pago</h4>



            <div class="form-group">
                <label class="control-label">Detalle del Pago</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoPago" class="control-label"></label>
                <input asp-for="MontoPago" class="form-control" />
                <span asp-validation-for="MontoPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UnidadesPagadas" class="control-label"></label>
                <input asp-for="UnidadesPagadas" class="form-control" />
                <span asp-validation-for="UnidadesPagadas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdProductoFinal" class="control-label"></label>
                <select asp-for="IdProductoFinal" asp-items="Model.ProductosFinales" class="form-control"></select>
                <span asp-validation-for="IdProductoFinal" class="text-danger"></span>
            </div>

            <div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <a asp-action="Index">Back to List</a>
            </div>




        </form>
    </div>
</div>




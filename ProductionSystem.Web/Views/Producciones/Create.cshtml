@model ProductionSystem.Web.Models.ProduccionViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Produccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PedidoId" />
            <input type="hidden" asp-for="UserCi" />
            <input type="hidden" asp-for="FaseId" />


            <div class="form-group">
                <label asp-for="FechaProduccion" class="control-label"></label>

@model ProductionSystem.Web.Models.PedidoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Registrar</h2>
<h4>Pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input  asp-for="Cantidad" asp-items="Model.Cantidad" class="form-control"></input>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input type="date" asp-for="Fecha" asp-items="Model.Fecha" class="form-control"></input>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoRealId" class="control-label"></label>
                <select asp-for="ProductoRealId" asp-items="Model.ProductosReales" class="form-control"> </select>
                <span asp-validation-for="ProductoRealId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
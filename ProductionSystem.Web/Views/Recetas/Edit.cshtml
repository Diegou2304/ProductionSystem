@model ProductionSystem.Web.Models.RecetaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Receta</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--Todo esto esta sujeto a la accion de add property-->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Campo que no pidamos en el get lo guarmamos en el hidden-->
            <input type="hidden" asp-for="Id" />
           
            <dl class="dl-horizontal">
                <dt>
                    Información Receta
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductoReal.Nombre)
                    <br />
                    @Html.DisplayFor(model => model.Insumo.Nombre)
                    <br />
                    Porcentaje :@Html.DisplayFor(model => model.Porcentaje) %
                </dd>
               

            </dl>


            <div class="form-group">
                <label asp-for="InsumoId" class="control-label"></label>
                <select asp-for="InsumoId" asp-items="Model.Insumos" class="form-control"></select>
                <span asp-validation-for="InsumoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductoRealId" class="control-label"></label>
                <select asp-for="ProductoRealId" asp-items="Model.ProductosReales" class="form-control"></select>
                <span asp-validation-for="ProductoRealId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" asp-items="Model.Porcentaje" class="form-control">
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@model ProductionSystem.Web.Data.Entities.ProductoReal

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Producto Real</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock" class="control-label"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>

            <dt>
                Nombre Comercial
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt>
                Stock

            </dt>

            <dd>
                @Html.DisplayFor(model => model.stock)
            </dd>
            <dt>
                Producto Real
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Producto.Nombre)
            </dd>
            <dt>
                Tipo de Producto
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Producto.TipoProducto.Nombre)
            </dd>
            <dt>
                Presentación
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Producto.Presentacion.Nombre)
                <br />
                Capacidad: @Html.DisplayFor(model => model.Producto.Presentacion.Envase.Capacidad) Gr.
                <br />
                Etiqueta: @Html.DisplayFor(model => model.Producto.Presentacion.Etiqueta.Nombre) Tamaño : @Html.DisplayFor(model => model.Producto.Presentacion.Etiqueta.Altura) cm @Html.DisplayFor(model => model.Producto.Presentacion.Etiqueta.Ancho) cm

            </dd>
            <dt>
                Sabor
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Producto.Sabor.Nombre)

            </dd>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ProductionSystem.Web.Models.ProductoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Registrar</h2>
<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="LineaId" class="control-label"></label>
                <select asp-for="LineaId" asp-items="Model.Lineas" class="form-control"></select>
                <span asp-validation-for="LineaId" class="text-danger"></span>
            </div>
            <td align="right">
                <input type="submit" value="GetCategorias" class="btn btn-success" asp-action="GetCategorias" />

                <br />
            </td>

            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-control"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProductoId" class="control-label"></label>
                <select asp-for="TipoProductoId" asp-items="Model.TiposProductos" class="form-control"></select>
                <span asp-validation-for="TipoProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaborId" class="control-label"></label>
                <select asp-for="SaborId" asp-items="Model.Sabores" class="form-control"></select>
                <span asp-validation-for="SaborId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresentacionId" class="control-label"></label>
                <select asp-for="PresentacionId" asp-items="Model.Presentaciones" class="form-control"></select>
                <span asp-validation-for="PresentacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" asp-items="Model.Nombre" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@model IEnumerable<ProductionSystem.Web.Data.Entities.Sucursal>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h2>Sucursales</h2>>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped" id="EmpresaTable">
                    <thead>
                        <tr>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Encargado)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Encargado)
                                </td>
                                <td>
                                    <a asp-action="EditSucursales" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                                    <a asp-action="DeleteSucursales" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a> |
                                    <a asp-action="Index"  class="btn btn-primary">Back To list</a> |

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#EmpresaTable').DataTable();
        });
    </script>
}

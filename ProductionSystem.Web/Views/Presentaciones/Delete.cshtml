@model ProductionSystem.Web.Data.Entities.Presentacion

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>¿Estas seguro que quieres eliminar esta presentacion?</h3>
<div>
    <h4>Presentación</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Envase.Capacidad)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Envase.Capacidad) G(gramos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Envase.Isplastic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Envase.Isplastic)
        </dd>
        <dt>
            Marca de Etiqueta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Etiqueta.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Etiqueta.PrecioUnitario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Etiqueta.PrecioUnitario) Bs
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Etiqueta.Altura)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Etiqueta.Altura) Cm
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Etiqueta.Ancho)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Etiqueta.Ancho) Cm
        </dd>
        <dt>
            Impermeabilidad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Etiqueta.IsWaterProof)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
@model IEnumerable<ProductionSystem.Web.Data.Entities.Presentacion>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h1>Presentaciones</h1>

<p>
    <a asp-action="Create" class=" btn btn-success">Nueva Presentacion</a>
</p>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped" id="PresentacionTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Envase.Capacidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Etiqueta.Nombre)
                            </th>

                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Envase.Capacidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Etiqueta.Nombre)
                                </td>

                                <td align="right">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#PresentacionTable').DataTable();
        });
    </script>
}
@model IEnumerable<ProductionSystem.Web.Data.Entities.Sabor>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h2>Sabores</h2>

<p>
    <a asp-action="Create" class=" btn btn-success">Nuevo Sabor</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped" id="SaborTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-warning">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-primary">Detalle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#SaborTable').DataTable();
        });
    </script>
}